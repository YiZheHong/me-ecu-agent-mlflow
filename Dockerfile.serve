FROM python:3.13-slim

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制依赖文件
COPY requirements_docker.txt .

# 安装Python依赖
RUN pip install -r requirements_docker.txt

# 复制必要的项目文件（服务容器只需要model wrapper和API代码）
COPY src/ ./src/
COPY setup.py .
COPY serve.py .

# 安装项目包
RUN pip install -e .

# 创建必要的目录
RUN mkdir -p /app/model_cache

# 暴露API端口
EXPOSE 8000

# 设置环境变量
ENV PYTHONUNBUFFERED=1
ENV MLFLOW_TRACKING_URI=http://mlflow-train:5000
ENV MODEL_NAME=ECUAgent
ENV MODEL_VERSION=latest

# 启动FastAPI服务
CMD ["python", "-m", "uvicorn", "serve:app", "--host", "0.0.0.0", "--port", "8000"]